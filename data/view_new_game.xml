<?xml version="1.0" encoding="UTF-8"?>
<view>
    <!-- mainmenuBackground -->
    <element>
        <x>0</x>
        <y>0</y>
        <width>1280</width>
        <height>720</height>
        <textures>
            <texture x="0" y="0" width="1280" height="720">mainmenu/background.png</texture>
            <texture x="100" y="100" width="394" height="198">mainmenu/backgroundText.png</texture>
        </textures>
    </element>
	<!-- newGame -->
    <element>
        <x>255</x>
        <y>500</y>
        <width>240</width>
        <height>170</height>
        <onclick>NEW_GAME</onclick>
        <textures>
            <texture x="0" y="0" width="240" height="170">mainmenu/button.png</texture>
            <text x="0" y="0" width="240" height="170">{newGame}</text>
        </textures>
    </element>
	<!-- exitGame -->
    <element>
        <x>510</x>
        <y>500</y>
        <width>240</width>
        <height>170</height>
        <onclick>EXIT_GAME</onclick>
        <textures>
            <texture x="-10" y="-10" width="260" height="190">mainmenu/focus.png</texture>
            <texture x="0" y="0" width="240" height="170">mainmenu/button.png</texture>
            <text x="0" y="0" width="240" height="170">{exitGame}</text>
        </textures>
    </element>

    <element>
        <x>510</x>
        <y>200</y>
        <width>240</width>
        <height>170</height>
        <onclick>EXIT_GAME</onclick>
        <textures>
            <texture x="-10" y="-10" width="260" height="190">mainmenu/focus.png</texture>
            <texture x="0" y="0" width="240" height="170">mainmenu/button.png</texture>
            <text x="0" y="0" width="240" height="170">{exitGame}</text>
        </textures>
    </element>
</view>