<?xml version="1.0" encoding="UTF-8"?>
<view>
    <!-- mainmenuBackground -->
    <element>
        <x>0</x>
        <y>0</y>
        <width>1280</width>
        <height>720</height>
        <textures>
            <texture x="0" y="0" width="1280" height="720">mainmenu/background.png</texture>
        </textures>
    </element>
    <element>
        <x>255</x>
        <y>50</y>
        <width>240</width>
        <height>50</height>
        <onclick>NEW_GAME</onclick>
        <textures>
			<texture x="0" y="0" width="240" height="50">mainmenu/background.png</texture>
			<texture x="300" y="0" width="80" height="50">mainmenu/background.png</texture>
            <text x="0" y="0" width="240" height="50">{strength}</text>
            <text x="300" y="0" width="80" height="50">{strength_value}</text>
        </textures>
    </element>
	<element>
        <x>500</x>
        <y>50</y>
        <width>50</width>
        <height>50</height>
        <onclick>DEC_STRENGTH</onclick>
        <textures>
            <texture x="0" y="0" width="50" height="50">mainmenu/background.png</texture>
			<text x="0" y="0" width="50" height="50">-</text>
        </textures>
    </element>
    <element>
        <x>640</x>
        <y>50</y>
        <width>50</width>
        <height>50</height>
        <onclick>INC_STRENGTH</onclick>
        <textures>
            <texture x="0" y="0" width="50" height="50">mainmenu/background.png</texture>
			<text x="0" y="0" width="50" height="50">+</text>
        </textures>
    </element>
</view>