<?xml version="1.0" encoding="UTF-8"?>
<view>
    <!-- mainmenuBackground -->
    <element>
        <y>0</y>
        <x>0</x>
        <width>1280</width>
        <height>720</height>
        <textures>
            <texture>mainmenu\background.png</texture>
            <texture>mainmenu\backgroundText.png</texture>
        </textures>
    </element>
    <!-- continueGame -->
    <element>
        <y>55</y>
        <x>240</x>
        <width>170</width>
        <height>240</height>
        <onclick>continueGame</onclick>
        <onhover>
            <texture>mainmenu\focus.png</texture>
        </onhover>
        <textures>
            <texture>mainmenu\continueGame.png</texture>
            <text>{continueGame}</text>
        </textures>
    </element>
    <!-- newGame -->
    <element>
        <y>305</y>
        <x>240</x>
        <width>170</width>
        <height>240</height>
        <onclick>newGame</onclick>
        <onhover>
            <texture>mainmenu\focus.png</texture>
        </onhover>
        <textures>
            <texture>mainmenu\newGame.png</texture>
            <text>{newGame}</text>
        </textures>
    </element>
    <!-- loadGame -->
    <element>
        <y>555</y>
        <x>240</x>
        <width>170</width>
        <height>240</height>
        <onclick>loadGame</onclick>
        <onhover>
            <texture>mainmenu\focus.png</texture>
        </onhover>
        <textures>
            <texture>mainmenu\loadGame.png</texture>
            <text>{loadGame}</text>
        </textures>
    </element>
    <!-- options -->
    <element>
        <y>805</y>
        <x>240</x>
        <width>170</width>
        <height>240</height>
        <onclick>options</onclick>
        <onhover>
            <texture>mainmenu\focus.png</texture>
        </onhover>
        <textures>
            <texture>mainmenu\options.png</texture>
            <text>{options}</text>
        </textures>
    </element>
    <!-- exitGame -->
    <element>
        <y>1055</y>
        <x>240</x>
        <width>170</width>
        <height>240</height>
        <onclick>exitGame</onclick>
        <onhover>
            <texture>mainmenu\focus.png</texture>
        </onhover>
        <textures>
            <texture>mainmenu\exitGame.png</texture>
            <text>{exitGame}</text>
        </textures>
    </element>
</view>