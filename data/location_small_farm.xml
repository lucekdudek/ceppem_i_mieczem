<?xml version="1.0" encoding="utf-8"?>
<location>
  <!-- conversation with farmer -->
  <event>
    <place>{EVENTA}</place>
    <text>{conversation with} {farmer}</text>
    <onclick>PERSON_CONVERSATION_FARMER</onclick>
  </event>
  <!-- conversation with farmer's wife -->
  <event>
    <place>{EVENTB}</place>
    <text>{conversation with} {farmer_wife}</text>
    <onclick>PERSON_CONVERSATION_FARMER_WIFE</onclick>
  </event>
  <!-- attack farmer -->
  <event>
    <place>{EVENTC}</place>
    <text>{attack} {farmer}</text>
    <onclick>PERSON_ATTACK_FARMER</onclick>
  </event>
  <!-- open chest -->
  <event>
    <place>{EVENTD}</place>
    <text>{open_container} {chest}</text>
    <onclick>CONTAINER_OPEN_CHEST</onclick>
  </event>
</location>